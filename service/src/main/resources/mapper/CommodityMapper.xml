<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.feidian.mapper.CommodityMapper">
    <insert id="insertCommodity">
        insert into commodity
        values (id, commodity_name, commodity_type, price, commodity_address, commodity_description,
                cover_url), (commodity)
    </insert>

    <update id="updateCommodityDescription">
        update commodity
        set commodity_description = #{description}
        where id = #{id}
    </update>


    <select id="findByUserId" resultType="com.feidian.domain.Commodity">
        select *
        from commodity
        where user_id = #{id}
    </select>

    <select id="findByCommodityId" resultType="com.feidian.domain.Commodity">
        select *
        from commodity
        where id = #{id}
    </select>
</mapper>