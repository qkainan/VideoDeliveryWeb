<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.feidian.mapper.VideoMapper">
    <insert id="insertVideo">
        insert into video (id, user_id, video_name, video_title, video_type, video_description,
                           cover_url, data_url, video_status, create_time, update_time, is_deleted)
            VALUES ();
    </insert>

    <delete id="deleteVideo">
        update video
        set id_deleted = #{1}
        where id = #{id}
    </delete>

    <select id="findByVideoName"></select>

    <select id="findByVideoId" resultType="com.feidian.domain.Video">
        select *
        from video
        where id = #{id};
    </select>
    <select id="findByUserId" resultType="com.feidian.domain.Video">
        select *
        from video
        where user_id = #{userId};
    </select>

</mapper>